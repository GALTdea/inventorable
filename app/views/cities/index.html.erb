<p style="color: green"><%= notice %></p>

<h1>Cities</h1>

<div id="items">
  <table id="customers">
    <tr>
      <th>Name</th>
      <th>Weather</th>
      <th>items</th>
    </tr>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td>  
          <img src="http://openweathermap.org/img/wn/<%#= item.city.weather_data['weather'].first['icon'] %>@2x.png" alt="">
          <%= city.weather_data['weather'].first["main"] %> 
          <%= city.weather_data['main']["temp"] %>
        </td>
        <td><%= link_to "Show", city %></td>
      </tr>

    <% end %>
  </table>
</div>
<br>
<%= link_to "New city", new_city_path %>